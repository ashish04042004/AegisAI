<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F7FF"
    android:padding="24dp">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸš¨ AegisAI"
        android:textColor="#1A237E"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Logo / Decorative Icon -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_crash_detect"
        android:contentDescription="Crash Simulation"
        android:layout_below="@id/appTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Simulate Button -->
    <Button
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analyze Crash Risk"
        android:backgroundTint="#3949AB"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/logo"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:elevation="6dp"
        android:padding="14dp" />

    <!-- Output Card -->
    <LinearLayout
        android:id="@+id/reportCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_below="@id/generateButton"
        android:background="@drawable/rounded_card"
        android:elevation="5dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/outputText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crash report will appear here."
            android:textColor="#263238"
            android:textSize="17sp"
            android:fontFamily="sans-serif" />
    </LinearLayout>
</RelativeLayout>
